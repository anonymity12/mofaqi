{
  "pages": [
    "pages/scenic/scenic",
    "pages/dangerous/dangerous",
    "pages/tips/tips",
    "pages/principles/principles",
    "pages/dangerous/detail/detail",
    "pages/principles/detail/detail",
    "pages/scenic/detail/detail"
  ],
  "requiredPrivateInfos": [
    "getFuzzyLocation",
    "chooseLocation"
  ],
  "window": {
    "navigationBarTextStyle": "@navigationBarTextStyle",
    "navigationBarTitleText": "摩法骑",
    "navigationBarBackgroundColor": "@navigationBarBackgroundColor",
    "backgroundColor": "@backgroundColor"
  },
  "tabBar": {
    "color": "#999999",
    "selectedColor": "#1296db",
    "borderStyle": "black",
    "backgroundColor": "#ffffff",
    "list": [
      {
        "pagePath": "pages/scenic/scenic",
        "text": "风景点",
        "iconPath": "images/scenic_normal.png",
        "selectedIconPath": "images/scenic_selected.png"
      },
      {
        "pagePath": "pages/dangerous/dangerous",
        "text": "危险路段",
        "iconPath": "images/dangerous_normal.png",
        "selectedIconPath": "images/dangerous_selected.png"
      },

      {
        "pagePath": "pages/principles/principles",
        "text": "原理科普",
        "iconPath": "images/principles_normal.png",
        "selectedIconPath": "images/principles_selected.png"
      },
      {
        "pagePath": "pages/tips/tips",
        "text": "鸣谢",
        "iconPath": "images/tips_normal.png",
        "selectedIconPath": "images/tips_selected.png"
      }
    ]
  },
  "networkTimeout": {
    "request": 10000,
    "connectSocket": 10000,
    "uploadFile": 10000,
    "downloadFile": 10000
  },
  "debug": false,
  "style": "v2",
  "permission": {
    "scope.userFuzzyLocation": {
      "desc": "你的位置信息将用于探索附近的风景点和不良路段"
    },
    "scope.userLocation": {
      "desc": "你的位置信息将用于探索附近的风景路段和不良路段"
    }
  },
  "cloud": true,
  "sitemapLocation": "sitemap.json",
  "themeLocation": "demo.theme.json",
  "darkmode": true,
  "resizable": true,
  "useExtendedLib": {
    "weui": true
  },
  "lazyCodeLoading": "requiredComponents"
}