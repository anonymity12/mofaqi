/* pages/dangerous/detail/detail.wxss */
.detail-container {
  padding: 20rpx;
}

.info-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.type, .location, .description, .time, .marker-id {
  margin-bottom: 30rpx;
}

.label {
  color: #666;
  font-size: 28rpx;
  display: block;
  margin-bottom: 10rpx;
}

.value {
  color: #333;
  font-size: 32rpx;
  display: block;
}

.action-buttons {
  margin-top: 40rpx;
  padding: 0 20rpx;
}

button {
  margin-bottom: 20rpx;
  border-radius: 8rpx;
}

.share-btn {
  background: #1296db;
  color: #fff;
}

.nav-btn {
  background: #07c160;
  color: #fff;
}

.delete-btn {
  background: #e64340;
  color: #fff;
  margin-top: 20rpx;
}

.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
}

/* 弹窗遮罩层 */
.npc-time-dialog {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(23, 172, 100, 0.35);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.dialog-content {
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx 32rpx 24rpx 32rpx;
  min-width: 480rpx;
  box-shadow: 0 8rpx 32rpx rgba(94, 10, 66, 0.41);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.dialog-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 32rpx;
  color: #d0021b; /* 红色 */
}

.dialog-row {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.dialog-row text {
  font-size: 28rpx;
  margin: 0 8rpx;
  color: #222; /* 黑色 */
}

.dialog-row input {
  width: 80rpx;
  text-align: center;
  border: 1px solid #eee;
  border-radius: 8rpx;
  padding: 8rpx 0;
  margin: 0 8rpx;
  color: #d0021b; /* 红色输入字体 */
}

.dialog-actions {
  display: flex;
  justify-content: center;
  gap: 32rpx;
  margin-top: 16rpx;
}
